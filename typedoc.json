{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["./src/index.ts", "./react-adapter/index.ts"],
  "out": "docs/api/generated", // Output directory for generated markdown
  "plugin": ["typedoc-plugin-markdown"],
  "readme": "none", // Don't generate a README, we have docs/api/index.md
  "githubPages": false, // We are using VitePress, not raw GitHub Pages for HTML
  "entryPointStrategy": "expand", // Document symbols from all entry points
  "includeVersion": true,
  // Optional: Theme settings for markdown output if needed
  // "theme": "markdown",
  // "markdownTheme": "bitbucket", // or "github", "gitbook", "docusaurus", "vuepress"
  "hideGenerator": true // Don't add "Generated by TypeDoc" footer
}
